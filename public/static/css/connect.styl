body
    background-color white 
    margin 0px
.mtop16
    margin-top 16px
    
.box
    backgraund-color fff
    border 1px solid #d6d6d6
    border-radius 8px
    width 500px
    position absolute
    font-size 14px
    .btn-success
        background-color #2b580c
        border-color #2b580c
        width 100%
    .inside 
        padding 16px
    .header
        background-color #D8BB93
        border-radius 8px 8px 0px 0px
        padding 16px
            a
                img
                    display block
                    margin 0px auto
                    width 25%
    .footer
        text-align center
        a
            font-size 0.9em
            display inline-block
            padding 0 30px 0 30px

.box_login
    left calc(50% - 250px)
    top calc(50% - 223px)
.box_register
    left calc(50% - 250px)
    top calc(50% - 323px)
